<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/num7"
        android:layout_width="96dp"
        android:layout_height="93dp"
        android:layout_above="@+id/num4"
        android:layout_alignParentStart="true"
        android:text="7"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="225dp" />

    <Button
        android:id="@+id/num0"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/num7"
        android:text="0"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="505dp" />

    <Button
        android:id="@+id/num1"
        android:layout_width="96dp"
        android:layout_height="93dp"
        android:layout_above="@+id/num0"
        android:layout_alignParentStart="true"
        android:text="1"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/num2"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_above="@+id/num0"
        android:layout_toEndOf="@+id/num7"
        android:text="2"
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/num3"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_above="@+id/num0"
        android:layout_toEndOf="@+id/num0"
        android:text="3"
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/num4"
        android:layout_width="96dp"
        android:layout_height="93dp"
        android:layout_above="@+id/num1"
        android:layout_alignParentStart="true"
        android:text="4"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="318dp" />

    <Button
        android:id="@+id/num5"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_above="@+id/num1"
        android:layout_toEndOf="@+id/num7"
        android:text="5"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="318dp" />

    <Button
        android:id="@+id/num6"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_above="@+id/num1"
        android:layout_toEndOf="@+id/num0"
        android:text="6"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="318dp" />


    <Button
        android:id="@+id/num8"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_alignTop="@+id/num7"
        android:layout_toEndOf="@+id/num7"
        android:text="8"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="225dp" />


    <Button
        android:id="@+id/num9"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_alignTop="@+id/num7"
        android:layout_toEndOf="@+id/num0"
        android:text="9"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="225dp" />

    <Button
        android:id="@+id/divide"
        android:layout_width="129dp"
        android:layout_height="76dp"
        android:layout_above="@+id/multiply"
        android:layout_toEndOf="@+id/num3"
        android:background="#5f6368"
        android:text="/"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="302dp" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="129dp"
        android:layout_height="74dp"
        android:layout_above="@+id/minus"
        android:layout_toEndOf="@+id/num3"
        android:background="#5f6368"
        android:text="x"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="376dp" />

    <Button
        android:id="@+id/minus"
        android:layout_width="129dp"
        android:layout_height="74dp"
        android:layout_above="@+id/plus"
        android:layout_toEndOf="@+id/num3"
        android:background="#5f6368"
        android:text="-"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="450dp" />

    <Button
        android:id="@+id/del"
        android:layout_width="129dp"
        android:layout_height="76dp"
        android:layout_alignTop="@+id/num7"
        android:layout_toEndOf="@+id/num3"
        android:background="#5f6368"
        android:text="DEL"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="225dp" />


    <EditText
        android:id="@+id/numList"
        android:layout_width="395dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:gravity="right"
        android:inputType="number"
        android:textColorLink="@color/colorAccent"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="56dp" />

    <Button
        android:id="@+id/plus"
        android:layout_width="129dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/num3"
        android:background="#5f6368"
        android:text="+"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="524dp" />

    <Button
        android:id="@+id/eq"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/num0"
        android:text="="
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="505dp" />

    <Button
        android:id="@+id/dot"
        android:layout_width="96dp"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="."
        android:textColor="@android:color/background_light"
        android:background="#3c4043"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="505dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="206dp"
        android:layout_height="71dp"
        android:layout_alignEnd="@+id/numList"
        android:layout_below="@+id/numList"
        android:gravity="right"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="147dp" />



</RelativeLayout>